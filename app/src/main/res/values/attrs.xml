<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    <declare-styleable name="SegmentTableLayout">
        <attr name="texts" format="string" />
    </declare-styleable>
    -->
    <declare-styleable name="TabView">
        <attr name="tab_texts" format="string" />
        <attr name="tab_verticalGap" format="dimension|reference" />
        <attr name="tab_textSize" format="dimension|reference" />
        <attr name="tab_textSelectColor" format="color|reference" />
        <attr name="tab_borderColor" format="color|reference" />
        <attr name="tab_borderWidth" format="dimension|reference" />
        <attr name="tab_showNotice" format="boolean" />
    </declare-styleable>

    <!--
    texts:文字中间使用 | 隔开
    horizonGap：水平的文字的连边的间隔
    verticalGap：竖直的文字的连边的间隔
    textColor：选中的文字颜色
    lineBorder：边框的宽度
    lineBorderColor：边框的颜色
    -->
    <declare-styleable name="SegmentView">
        <attr name="it_texts" format="string" />
        <attr name="it_horizonGap" format="dimension|reference" />
        <attr name="it_verticalGap" format="dimension|reference" />
        <attr name="it_textSize" format="dimension|reference" />
        <attr name="it_textColor" format="color|reference" />
        <attr name="it_lineBorderColor" format="color|reference" />
        <attr name="it_lineBorder" format="dimension|reference" />
    </declare-styleable>

    <!--
         ts_texts:            文字中间使用 | 隔开
         ts_textSize:         文字大小
         ts_textNormalColor:  文字未选中的颜色
         ts_textSelectColor:  文字选中的颜色
         ts_radius:           边缘圆角大小
         ts_normalColor:      未选中的背景色
         ts_selectColor:      选中的背景色
         ts_textLeftRightGap: 文字左右的内间隙, 注意: wrap_content 下可用
         ts_textTopBottomGap: 文字上下的内间隙, 注意: wrap_content 下可用
         ts_defaultIndex:     默认选中的位置
         ts_divideWidth:      分割线的宽度
         ts_divideColor:      分割线的颜色
     -->
    <declare-styleable name="TabSegmentView">
        <attr name="ts_texts" format="string|reference" />
        <attr name="ts_textSize" format="dimension|reference" />
        <attr name="ts_textNormalColor" format="color|reference" />
        <attr name="ts_textSelectColor" format="color|reference" />
        <attr name="ts_radius" format="dimension|reference" />
        <attr name="ts_normalColor" format="color|reference" />
        <attr name="ts_selectColor" format="color|reference" />
        <attr name="ts_textLeftRightGap" format="dimension|reference" />
        <attr name="ts_textTopBottomGap" format="dimension|reference" />
        <attr name="ts_defaultIndex" format="integer" />
        <attr name="ts_divideWidth" format="dimension|reference" />
        <attr name="ts_divideColor" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="AchievementView">
        <attr name="achievement_textColor" format="color|reference" />
        <attr name="achievement_textSize" format="dimension|reference" />
    </declare-styleable>


    <!--
    state_drawables: 选择器图片
    icon_liked:默认是否选中

    -->
    <declare-styleable name="StarImageView">
        <attr name="state_drawables" format="reference" />
        <attr name="liked" format="boolean" />
    </declare-styleable>


    <!--
    frame_width：边框的宽度
    frame_color：边框的颜色
    frame_round_radius：圆角的大小
    -->
    <declare-styleable name="FrameTextView">
        <attr name="frame_width" format="dimension|reference"/>
        <attr name="frame_color" format="color|reference"/>
        <attr name="frame_round_radius" format="dimension|reference"/>
    </declare-styleable>


    <!--
    IconTextView图标文本控件
    itv_textSize：文字大小
    itv_textColor：文字颜色
    itv_gap：文字和图标之间的间隙
    itv_direction：方向
           TOP：上边
           BOTTOM: 下边
           LEFT：左边
           RIGHT：右边
    itv_icon：图标
    itv_text：显示的文本
    itv_iconWidth：图标的宽度
    itv_iconHight：图标的高度 ，如果不设置宽度和高度的话，默认按照图片的宽度和高度来
    -->
    <declare-styleable name="IconTextView">
        <attr name="itv_textSize" format="dimension|reference"/>
        <attr name="itv_textColor" format="color|reference"/>
        <attr name="itv_gap" format="dimension|reference"/>
        <attr name="itv_direction" >
            <enum name="TOP" value="0" />
            <enum name="BOTTOM" value="1" />
            <enum name="LEFT" value="2" />
            <enum name="RIGHT" value="3" />
        </attr>
        <attr name="itv_icon" format="reference"/>
        <attr name="itv_text" format="string|reference"/>
        <attr name="itv_iconWidth" format="dimension|reference"/>
        <attr name="itv_iconHeight" format="dimension|reference"/>
    </declare-styleable>


    <!--
    自定义ViewGroup的属性
    slide_width： 支持拖拽的布局的宽度
    slide_layout：支持拖拽的布局
    content_layout: 内容布局
    -->
    <declare-styleable name="SlideLayout">
        <attr name="slide_width" format="dimension|reference"/>
        <attr name="slide_layout" format="reference" />
        <attr name="content_layout" format="reference"/>
    </declare-styleable>
    
    <!--
    自定义的表格控件的属性

    -->
    <declare-styleable name="SheetView">
        <attr name="row" format="integer|reference"/>
        <attr name="column" format="integer|reference"/>
        <attr name="cell_padding" format="dimension|reference"/>
        <attr name="border_color" format="color|reference"/>
        <attr name="border_width" format="dimension|reference"/>
        <attr name="text_color" format="color|reference" />
        <attr name="header_background" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="TagImageView">
        <attr name="tag_text" format="string|reference" />
        <attr name="tag_background" format="color|reference" />
        <attr name="tag_text_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="SpinnerView">
        <attr name="inner_radius" format="dimension|reference" />
        <attr name="outer_radius" format="dimension|reference" />
        <attr name="velocity" format="integer" />
    </declare-styleable>
    
</resources>

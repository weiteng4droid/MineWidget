<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.weiteng.rxdemo.MainActivity"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_rx_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基础写法"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="变换样式"
            android:id="@+id/button_rx_convert"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="just创建被观察者"
            android:layout_marginTop="5dp"
            android:id="@+id/button_rx_just"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="from创建被观察者"
            android:layout_marginTop="5dp"
            android:id="@+id/button_rx_from"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="repeat创建被观察者"
            android:layout_marginTop="5dp"
            android:id="@+id/button_rx_repeat"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="range创建被观察者"
            android:layout_marginTop="5dp"
            android:id="@+id/button_rx_range" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="timer创建被观察者"
            android:layout_marginTop="5dp"
            android:id="@+id/button_rx_timer" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="interval创建被观察者"
            android:layout_marginTop="5dp"
            android:id="@+id/button_rx_interval" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="线程调度"
            android:layout_marginTop="5dp"
            android:id="@+id/button_rx_schedule" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan操作符"
            android:id="@+id/button_rx_scan" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="merge操作符"
            android:id="@+id/button_rx_merge" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="zip操作符"
            android:id="@+id/button_rx_zip" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text="doOnComplete辅助操作符"
            android:id="@+id/button_rx_doc" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text="doOnError辅助操作符"
            android:id="@+id/button_rx_error" />

    </LinearLayout>

</LinearLayout>
